#include "main.h"

/**
 * _isalpha - Function
 * Description: check if the passing alphabet is lowercase or uppercase
 * Return: 1 if true || 0 if false
 * @c: store an integer value
*/

int _isalpha(int c)
{

	if (c >= 97 && c <= 122)
	{
		return (1);
	}

		else if (c >= 65 && c <= 90)
		{
			return (1);
		}
		else
		{
			return (0);
		}
}
